
<!DOCTYPE html>
<html>
   <head>
	  <title>Title of the document</title>
   </head>
   <body>
	   <form asp-controller="Student" asp-action="Add"> 
		   
		 <button type="submit" class="btn btn-primary" >Add</button>

	   </form>
  <style>
	  #Studenttable th{
		  background-color:orange;
  color: white;
	  }
  </style>
	   <table class="table table-dark table-hover" id = Studenttable>
	 <thead> 
	   <tr>
		 <th>Name</th>
		 <th>Address</th>
		 <th> Action </th>	
	   </tr>
    </thead>
		@for (int i = 0; i < ViewBag.Students.Count; i++)
		{
			<tbody>
					 <tr>
						   <td>
								   @ViewBag.Students[i].Name
						   </td>
						   <td>
								   @ViewBag.Students[i].Address
						   </td>
						   <td>
								<a type="Button" class=" btn btn-success" asp-controller="Student" asp-action="Edit" asp-route-id="@ViewBag.Students[i].Id" >Edit</a>
									@*<a type="Button" class="btn btn-danger" asp-controller="Student" asp-action="Delete" asp-route-id="@ViewBag.Students[i].Id" >Delete</a>*@
						@Html.ActionLink("Delete","Delete","Student",new{ViewBag.Students[i].Id},new{@class="btn btn-danger",onclick="return confirm('Do you really want to delete?')"})
						   </td>
						     
					 </tr>
		    </tbody>
		}
   </table>
   </body>
</html>
